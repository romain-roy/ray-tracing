{
	"version": "2.0.0",
	"windows": {
		"options": {
			"shell": {
				"executable": "bash.exe",
				"args": [
					"-c"
				]
			}
		}
	},
	"tasks": [
		{
			"label": "build ray tracing",
			"type": "shell",
			"command": "g++",
			"args": [
				"raytracing.cpp",
				"-o",
				"raytracing.exe",
				"-Wall",
				"-Wextra",
				"-Wconversion",
				"-pedantic",
				"-ansi",
				"-std=c++11",
				"-lfreeimage",
				"-fopenmp"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}